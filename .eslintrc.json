{
	"env": {
		"es2021": true,
		"node": true
	},
	"extends": [
		"airbnb-base"
	],
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"ecmaVersion": 12,
		"sourceType": "module"
	},
	"plugins": [
		"@typescript-eslint",
		"import"
	],
	"rules": {
		"linebreak-style":"warn",
		"comma-dangle": "warn",
		"arrow-parens": "warn",
		"object-curly-newline": "warn",
		"no-unused-vars": "warn",
		"radix": "warn",
		"max-len": "warn",
		"camelcase": "off",
		"import/prefer-default-export": "off",
		"import/extensions": "off",
		"@typescript-eslint/explicit-function-return-type": "off",
		"@typescript-eslint/explicit-member-accessibility": "off"
	},
	"settings": {
		"import/parsers": {
			"@typescript-eslint/parser": [".ts", ".tsx"]
		},
		"import/resolver": {
			"node": {
				"extensions": [".js", ".ts"]
			}
		}
	}
}
